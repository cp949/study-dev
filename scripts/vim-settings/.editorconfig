root = true
[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.py]
max_line_length = 119

[Makefile]
indent_style = tab

[*.sh]
indent_size = 4

# 4 space indentation
[*.{py,java,kt,r,R}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{js,json,y{a,}ml,html,cwl}]
indent_style = space
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = ignore
